{
  "theme": "cave-light",
  "mode": "system",
  "buffer_font_family": "JetBrains Mono",
  "buffer_font_size": 14,
  "buffer_line_height": "comfortable",
  "ui_font_family": "system",
  "ui_font_size": 14,
  
  "tab_size": 2,
  "hard_tabs": false,
  "preferred_line_length": 120,
  "soft_wrap": "preferred_line_length",
  "show_wrap_guides": true,
  "wrap_guides": [80, 120],
  "cursor_blink": true,
  "relative_line_numbers": false,
  "show_whitespaces": "selection",
  "vim_mode": false,
  
  "autosave": "on_focus_change",
  "format_on_save": "on",
  "ensure_final_newline_on_save": true,
  "remove_trailing_whitespace_on_save": true,
  
  "terminal": {
    "shell": "system",
    "font_family": "JetBrains Mono",
    "font_size": 14,
    "line_height": "comfortable",
    "option_as_meta": false,
    "blinking": "off",
    "env": {
      "TERM": "xterm-256color"
    }
  },
  
  "projects_online_by_default": true,
  "calls": {
    "mute_on_join": false,
    "share_on_join": false
  },
  
  "search": {
    "whole_word": false,
    "case_sensitive": false,
    "include_ignored": false,
    "regex": false
  },
  
  "diagnostics": {
    "include_warnings": true,
    "inline": {
      "enabled": true
    }
  },
  
  "features": {
    "edit_prediction_provider": "copilot"
  },
  "assistant": {
    "version": "2",
    "default_model": {
      "provider": "zed.dev", 
      "model": "claude-3-5-sonnet-20241022"
    }
  },
  
  "languages": {
    "TypeScript": {
      "tab_size": 2,
      "formatter": "language_server",
      "format_on_save": "on",
      "code_actions_on_format": {
        "source.organizeImports": true,
        "source.removeUnused": true
      }
    },
    "TSX": {
      "tab_size": 2,
      "formatter": "language_server", 
      "format_on_save": "on",
      "code_actions_on_format": {
        "source.organizeImports": true,
        "source.removeUnused": true
      }
    },
    "JavaScript": {
      "tab_size": 2,
      "formatter": "language_server",
      "format_on_save": "on"
    },
    "JSON": {
      "tab_size": 2,
      "formatter": "language_server",
      "format_on_save": "on"
    },
    "Rust": {
      "tab_size": 4,
      "formatter": "language_server",
      "format_on_save": "on",
      "preferred_line_length": 100
    },
    "Markdown": {
      "tab_size": 2,
      "soft_wrap": "preferred_line_length",
      "preferred_line_length": 80
    },
    "YAML": {
      "tab_size": 2,
      "formatter": "language_server"
    },
    "TOML": {
      "tab_size": 2,
      "formatter": "language_server"
    }
  },
  
  "lsp": {
    "typescript-language-server": {
      "initialization_options": {
        "preferences": {
          "includeInlayParameterNameHints": "all",
          "includeInlayParameterNameHintsWhenArgumentMatchesName": false,
          "includeInlayFunctionParameterTypeHints": true,
          "includeInlayVariableTypeHints": true,
          "includeInlayPropertyDeclarationTypeHints": true,
          "includeInlayFunctionLikeReturnTypeHints": true,
          "includeInlayEnumMemberValueHints": true
        }
      }
    },
    "rust-analyzer": {
      "initialization_options": {
        "diagnostics": {
          "experimental": {
            "enable": true
          }
        },
        "check": {
          "command": "clippy",
          "workspace": true
        },
        "cargo": {
          "allTargets": true,
          "buildScripts": {
            "enable": true
          }
        },
        "procMacro": {
          "enable": true
        },
        "inlayHints": {
          "bindingModeHints": {
            "enable": false
          },
          "chainingHints": {
            "enable": true
          },
          "closingBraceHints": {
            "enable": true,
            "minLines": 25
          },
          "closureReturnTypeHints": {
            "enable": "never"
          },
          "lifetimeElisionHints": {
            "enable": "never",
            "useParameterNames": false
          },
          "maxLength": 25,
          "parameterHints": {
            "enable": true
          },
          "reborrowHints": {
            "enable": "never"
          },
          "renderColons": true,
          "typeHints": {
            "enable": true,
            "hideClosureInitialization": false,
            "hideNamedConstructor": false
          }
        }
      }
    },
    "tailwindcss-language-server": {
      "settings": {
        "tailwindCSS": {
          "emmetCompletions": true,
          "includeLanguages": {
            "typescript": "javascript",
            "typescriptreact": "javascript"
          },
          "experimental": {
            "classRegex": [
              ["cva\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"],
              ["cx\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"]
            ]
          }
        }
      }
    },
    "yaml-language-server": {
      "settings": {
        "yaml": {
          "keyOrdering": true,
          "format": {
            "singleQuote": false,
            "bracketSpacing": true
          },
          "schemas": {
            "https://json.schemastore.org/package.json": ["package.json"],
            "https://json.schemastore.org/tsconfig.json": ["tsconfig.json", "tsconfig.*.json"],
            "https://json.schemastore.org/turbo.json": ["turbo.json"]
          }
        }
      }
    },
    "eslint": {
      "settings": {
        "codeActionOnSave": {
          "mode": "all",
          "rules": ["!debugger", "!no-only-tests/*"]
        },
        "format": true,
        "nodePath": "",
        "onIgnoredFiles": "off",
        "packageManager": "bun",
        "problems": {
          "shortenToSingleLine": false
        },
        "quiet": false,
        "rulesCustomizations": [],
        "run": "onType",
        "useESLintClass": false,
        "validate": "on",
        "workingDirectory": {
          "mode": "location"
        }
      }
    }
  },
  
  "auto_install_extensions": {
    "typescript": true,
    "rust": true,
    "tailwind": true,
    "html": true,
    "css": true,
    "json": true,
    "yaml": true,
    "toml": true,
    "dockerfile": true,
    "prisma": true
  },
  
  "load_direnv": "shell_hook",
  
  "scrollbar": {
    "show": "system",
    "axes": {
      "horizontal": true,
      "vertical": true
    }
  },
  
  "git": {
    "inline_git_blame": true,
    "git_gutter": "tracked_files"
  },
  
  "project_panel": {
    "button": true,
    "default_width": 240,
    "dock": "left",
    "file_icons": true,
    "folder_icons": true,
    "git_status": true,
    "indent_size": 20,
    "auto_reveal_entries": false,
    "auto_fold_dirs": true
  },
  
  "outline_panel": {
    "button": true,
    "default_width": 300,
    "dock": "right"
  },
  
  "experimental": {
    "theme_overrides": {
      "editor.background": null,
      "terminal.background": null
    }
  }
}
